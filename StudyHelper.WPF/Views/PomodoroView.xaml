<UserControl
    x:Class="StudyHelper.WPF.Views.PomodoroView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Components="clr-namespace:StudyHelper.WPF.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:StudyHelper.WPF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Border
            Padding="20"
            BorderBrush="Black"
            BorderThickness="1"
            CornerRadius="5"
            SnapsToDevicePixels="True">
            <Border.Background>
                <SolidColorBrush Opacity="0.4" Color="LightCyan" />
            </Border.Background>
            <Components:PomodoroTimer DataContext="{Binding PomodoroTimerViewModel}" />
        </Border>
    </Grid>
</UserControl>
